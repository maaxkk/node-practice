extends layout

block content
    h1= title
    p= book.title
    if book_instances.length
        p #[strong Delete the following books copies before attempting to delete this book.]
            div(style='margin-left:20px;margin-top:20px')
                h4 Book copies
                dl
                    each book_instance in book_instances
                        dt
                            span ID:
                            a(href=book_instance.url) #{book_instance._id}
                            p Imprint: #{book_instance.imprint}
                        dd
    else
        p Do you really want to delete this Book?

        form(method='POST')
            div.form-group
                input#authorid.form-control(type='hidden', name='bookid', value=book._id )

            button.btn.btn-primary(type='submit') Delete